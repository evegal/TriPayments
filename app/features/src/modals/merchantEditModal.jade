script(type="text/ng-template" id="merchantEditContent.html")
    .default_modal
        .modal-header
            h3.modal-title
                span.subtle Edit Group Account: 
                span {{merchant.Name}}
            button.close(type="button" ng-click="cancel()") x


        .modal-body.align-right
            form.form(name="merchantEditForm")
                .row
                    .col-md-4
                        label Merchant Name
                    .col-md-6
                        input.form-control(ng-model="merchant.Name")
                .row
                    .col-md-4
                        label Currency
                    .col-md-6
                        select.form-control(ng-options="item.Id as item.Name for item in currencies" ng-model="merchant.Currency")


                .row.errorMsg
                    p {{errorMsg}}

                .userCreateSuccess
                    p Merchant Account Updated




        .modal-footer
            a.row_btn.disabled_ftr_btn(ng-show="merchantEditForm.$pristine" tooltip="SNo changes to be saved")
                    i.fa.fa-plus
                    span Save
            a.row_btn.create_btn(ng-show="merchantEditForm.$dirty" type="submit" ng-click="updateMerchant(merchant)")
                    i.fa.fa-plus
                    span Save
            a.row_btn.cancel_btn(href="" ng-click="cancel()" tooltip="Cancel")
                    i.fa.fa-sign-out
                    span Cancel                