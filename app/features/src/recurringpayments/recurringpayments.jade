.row
    h1 Recurring Payments
.panel.panel-default
    .panel-heading
        .row
            .col-md-6
                h2.panel-title
                  i.fa.fa-icon
                  
            .col-md-6
                a.def_btn.csv_export_btn(href="" ng-csv='usersCSV' filename="usersExport.csv")
                    i.fa.fa-file-text-o 
                    span Excel Export
                a.def_btn.add_mid_group_btn(href="" ng-click="open()" ng-controller="createUserModalCtrl") 
                    i.fa.fa-plus
                    span Create Subscription
    .panel-body
        table.table.ng-table-responsive.table-striped(st-table="shownUsers" st-safe-src="Users")
            thead
                tr
                  th(colspan="14")
                    input.form-control(st-search="" type="text" placeholder="Filter through all  subscriptions")
                tr
                    th.st-header(st-sort="") BID
                    th.st-header(st-sort="") Subscription Date
                    th.st-header(st-sort="") First Name
                    th.st-header(st-sort="") Last Name
                    th.st-header(st-sort="") Address
                    th.st-header(st-sort="") City
                    th.st-header(st-sort="") State
                    th.st-header(st-sort="") Zip
                    th.st-header(st-sort="") Country
                    th.st-header(st-sort="") Phone
                    th.st-header(st-sort="") Payment
                    th.st-header(st-sort="") Cycle
                    th.st-header(st-sort="") Next Invoice Date
                    th.st-header-nosort Actions
            tbody
                tr(ng-repeat="User in shownUsers")
                    td {{User.UserId}}
                    td {{User.UserName}} 
                    td {{User.Email}}
                    td
                      .row_btn.turquoise_btn.margin-right(ng-click="open(User)" ng-controller="editUserModalCtrl")
                        i.fa.fa-edit
                        span Edit
                      .row_btn.alazarin_btn(ng-click="openIt(User)" ng-controller="removeUserModalCtrl")
                        i.fa.fa-trash
                        span Delete